generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id        Int       @id @default(autoincrement())
  nombre    String
  createdAt DateTime  @default(now())
  ordenes   Orden[]
}

model Orden {
  id        Int       @id @default(autoincrement())
  cliente   Cliente   @relation(fields: [clienteId], references: [id])
  clienteId Int
  status    String
  monto     Decimal   @db.Decimal(12,2)
  createdAt DateTime  @default(now())
}
